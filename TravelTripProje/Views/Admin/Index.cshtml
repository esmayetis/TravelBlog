@using TravelTripProje.Models.Siniflar
@model List<Blog>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h2>Blog Listesi</h2>
<br />
<table class="table table-bordered">
    <tr>
        <th>ID</th>
        <th>BAŞLIK</th>
        <th>SİL</th>
        <th>GÜNCELLE</th>
        <th> BLOG DETAYLARI</th>
    </tr>
    @foreach (var x in Model)
    {
        <tr>
            <td>@x.Id</td>
            <td>@x.Baslik</td>
            <td><a href="/Admin/BlogSil/@x.Id" class="btn btn-danger">Sil</a></td>
            <td><a href="/admin/BlogGetir/@x.Id" class="btn btn-warning">Güncelle</a></td>
            <td>
                <a href="#" class="btn" style="background-color: #cfcfcf; color: black;">Detaylar</a>
                </td>

</tr>
    }
</table>

<a href="/Admin/YeniBlog/" class="btn btn-primary">Yeni Blog</a>

