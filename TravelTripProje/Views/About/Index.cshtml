@model List<TravelTripProje.Models.Siniflar.Hakkimizda>
@{
    ViewBag.Title = "Hakkımızda";
    Layout = "~/Views/Shared/_TestLayout.cshtml";
}

<style>
    .card-container {
        display: flex;
        flex-wrap: wrap;
        justify-content: center;
        gap: 30px;
        padding: 50px 20px;
        max-width: 1200px;
        margin: auto;
    }

    .info-card {
        width: 300px;
        border-radius: 12px;
        overflow: hidden;
        box-shadow: 0 4px 20px rgba(0, 0, 0, 0.1);
        transition: transform 0.3s ease;
        background: #fff;
    }

        .info-card:hover {
            transform: translateY(-5px);
        }

        .info-card img {
            width: 100%;
            height: 200px;
            object-fit: cover;
        }

    .info-card-content {
        padding: 20px;
    }

        .info-card-content h3 {
            color: #800040;
            margin-bottom: 10px;
        }

        .info-card-content p {
            font-size: 14px;
            color: #555;
            line-height: 1.6;
        }
</style>

<div class="card-container">
    @foreach (var item in Model)
    {
        <div class="info-card">
            <img src="@item.FotoUrl" alt="Hakkımızda Kartı" />
            <div class="info-card-content">
              
                <p>@item.Aciklama</p>
            </div>
        </div>
    }
</div>
