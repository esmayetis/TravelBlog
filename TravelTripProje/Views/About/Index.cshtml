@using TravelTripProje.Models.Siniflar
@model List<Hakkimizda>
@{
    ViewBag.Title = "Hakkımızda";
    Layout = "~/Views/Shared/_TestLayout.cshtml";
}

<style>
    .about-cards {
        display: flex;
        flex-wrap: wrap;
        justify-content: center;
        gap: 30px;
        padding: 30px;
    }

    .card {
        background: white;
        border-radius: 10px;
        box-shadow: 0 6px 20px rgba(0, 0, 0, 0.1);
        overflow: hidden;
        width: 300px;
        transition: transform 0.3s ease, box-shadow 0.3s ease;
    }

        .card:hover {
            transform: scale(1.05);
            box-shadow: 0 10px 30px rgba(0, 0, 0, 0.2);
        }

        .card img {
            width: 100%;
            height: 180px;
            object-fit: cover;
        }

    .card-body {
        padding: 20px;
    }

    .card-title {
        font-size: 20px;
        font-weight: bold;
        color: #800040;
        margin-bottom: 10px;
    }

    .card-text {
        font-size: 14px;
        color: #333;
        line-height: 1.5;
    }
</style>

<div class="about-cards">
    @foreach (var x in Model)
    {
        <div class="card">
            <img src="@x.FotoUrl" alt="Görsel" />
            <div class="card-body">
                <div class="card-title">@x.Baslik</div>
                <br />
                <div class="card-text">@x.Aciklama</div>
            </div>
        </div>
    }
</div>
