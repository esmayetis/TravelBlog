@model List<TravelTripProje.Models.Siniflar.Otel>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_TestLayout.cshtml";
}
<br/>
<h2 style="margin-left: 450px; color: #800000;">Oteller</h2>

<style>
    .otel-container {
        display: flex;
        flex-wrap: wrap;
        justify-content: center;
        padding: 20px 50px; /* Header ve footer hizasına göre ayarlandı */
        box-sizing: border-box;
    }

    .otel-card {
        display: flex;
        flex-direction: row;
        background-color: #f9f9f9;
        border: 1px solid #ccc;
        border-radius: 10px;
        margin: 15px;
        width: 1000px;
        max-width: 90%;
        box-shadow: 0 2px 6px rgba(0, 0, 0, 0.1);
        overflow: hidden;
    }

    .otel-image {
        flex: 1;
    }

        .otel-image img {
            width: 100%;
            height: 100%;
            object-fit: cover;
            max-width: 300px;
        }

    .otel-info {
        flex: 2;
        padding: 20px;
        display: flex;
        flex-direction: column;
        justify-content: center;
    }

        .otel-info h3 {
            margin: 0 0 10px 0;
            color: #800000;
        }

        .otel-info p {
            margin: 0;
            color: #444;
            font-size: 15px;
        }
    .alticizili {
        text-decoration: underline;
    }
</style>

<div class="otel-container">
    @foreach (var x in Model)
    {
        <div class="otel-card">
            <div class="otel-image">
                <img src="@x.FotoUrl" alt="otel resmi" />
            </div>
            <div class="otel-info">
                <h3><span class="alticizili">Otel Adı - Blog Adı:</span> @x.Baslik</h3>

                <p>@x.Aciklama</p>
            </div>
        </div>
    }
</div>