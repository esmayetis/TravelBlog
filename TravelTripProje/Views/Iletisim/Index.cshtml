@model TravelTripProje.Models.Siniflar.iletisim
@{
    ViewBag.Title = "İletişim";
    Layout = "~/Views/Shared/_TestLayout.cshtml";
}

<style>
    .contact-wrapper {
        max-width: 900px;
        margin: auto;
        padding: 30px 15px;
    }

    .contact-title {
        font-size: 28px;
        font-weight: bold;
        margin-bottom: 20px;
        color: #800040;
    }

    .contact-container {
        display: flex;
        flex-wrap: wrap;
        gap: 40px;
        justify-content: space-between;
    }

    .contact-form, .contact-info {
        flex: 1;
        min-width: 300px;
    }

        .contact-info p {
            margin-bottom: 10px;
            font-size: 15px;
        }

    .form-group {
        margin-bottom: 15px;
    }

    .form-control {
        width: 100%;
        padding: 8px;
        font-size: 14px;
    }

    .alert {
        padding: 12px;
        background-color: #d4edda;
        color: #155724;
        border-radius: 5px;
        margin-bottom: 20px;
        font-weight: bold;
        text-align: center;
    }

    iframe {
        width: 100%;
        height: 300px;
        border: none;
        margin-top: 30px;
    }

    .btn-send {
        background-color: #800040;
        color: #fff;
        border: none;
        padding: 10px 24px;
        font-size: 16px;
        border-radius: 8px;
        cursor: pointer;
        transition: background-color 0.3s ease;
        font-weight: bold;
        letter-spacing: 0.5px;
    }

        .btn-send:hover {
            background-color: #a00050;
        }
</style>

<div class="contact-wrapper">
    <h2 class="contact-title">Bizimle İletişime Geçin</h2>

    @* Başarı mesajı *@
    @if (ViewBag.Mesaj != null)
    {
        <div id="mesajKutusu" class="alert">
            @ViewBag.Mesaj
        </div>

        <script>
            setTimeout(function () {
                var kutu = document.getElementById("mesajKutusu");
                if (kutu) {
                    kutu.style.display = "none";
                }
            }, 3000); // 3 saniye sonra mesaj kutusunu gizle
        </script>
    }

    <div class="contact-container">
        <div class="contact-form">
            @using (Html.BeginForm("Index", "Iletisim", FormMethod.Post))
            {
                <div class="form-group">
                    @Html.LabelFor(x => x.AdSoyad)
                    @Html.TextBoxFor(x => x.AdSoyad, new { @class = "form-control", placeholder = "Ad Soyad" })
                </div>

                <div class="form-group">
                    @Html.LabelFor(x => x.Mail)
                    @Html.TextBoxFor(x => x.Mail, new { @class = "form-control", placeholder = "E-Posta" })
                </div>

                <div class="form-group">
                    @Html.LabelFor(x => x.Konu)
                    @Html.TextBoxFor(x => x.Konu, new { @class = "form-control", placeholder = "Konu" })
                </div>

                <div class="form-group">
                    @Html.LabelFor(x => x.Mesaj)
                    @Html.TextAreaFor(x => x.Mesaj, 5, 30, new { @class = "form-control", placeholder = "Mesajınız..." })
                </div>

                <button class="btn-send">Gönder</button>
            }
        </div>

        <div class="contact-info">
            <p><strong>📍 Adres:</strong> Örnek Mah. Yazılım Cad. No:123</p>
            <p><strong>📧 Mail:</strong> iletisim@easytrip.com</p>
            <p><strong>📞 Telefon:</strong> +90 555 123 45 67</p>
        </div>
    </div>

    <iframe src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d12037.376778578408!2d28.9473!3d41.0138!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x14cab9aeda267c13%3A0x4d0f9630b94c68a9!2sİstanbul!5e0!3m2!1str!2str!4v1690555427251!5m2!1str!2str"
            allowfullscreen=""
            loading="lazy">
    </iframe>
</div>
